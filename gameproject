      ],
      "b" => [
        "A) Jump on him?",
        "B) Use your 🔥 🌻 Fire Flower and throw a 🔥 🔴 Fireball at him?",
        "C) Take a moment and think about it?",
        "D) Throw the Koopa Troopa shell at him"
      ],
      "c" => [
        "A) Jump on him?",
        "B) Use your 🔥 🌻 Fire Flower and throw a 🔥 🔴 Fireball at him?",
        "C) Take a moment and think about it?"
      ]
    },
    "box 3" => {
      "a" => [
        "A) Jump on him?",
        "B) Use your 🍂🍂🍂🍂🍂🍂 Super Leaf and whack him with your Racoon Tail?",
        "C) Take a moment and think about it?"
      ],
      "b" => [
        "A) Jump on him?",
        "B) Use your 🍂🍂🍂🍂🍂🍂 Super Leaf and whack him with your Racoon Tail?",
        "C) Take a moment and think about it?",
        "D) Throw the Koopa Troopa shell at him"
