# creates a method for quitting game
def quit(quitting)
  # loops until correct input
  until quitting == "yes" || quitting == "no"
    puts "\n"
    `afplay bump.wav`
    puts "🚫Incorrect input!🚫"
    print "Please choose yes or no:\t"
    quitting = gets.chomp.downcase
  end

  if quitting == "yes"
    system('clear')
    puts "You have quit and are now free to go."
    exit
  else
    board_one(quitting)
  end
  return quitting
end

quitting = ""


def board_one(quitting)
  play = ""
  puts "\n"
  puts "Are you ready to conquer 🐢 👹 Koopa and rescue 👸🏼 🍑 Princess Peach?"
  print "Yes or No:\t"
  play = gets.chomp.downcase
# loops until correct input
  until play == "yes" || play == "no"
    puts "\n"
    `afplay bump.wav`
    puts "🚫 Incorrect input! 🚫"
    print "Please choose yes or no:\t"
    play = gets.chomp.downcase
  end

  case play
  when "no"
    system('clear')
    puts "So then would you like to quit? Yes/No"
    quitting = gets.chomp.downcase
    quit(quitting)
  when "yes"
    system('clear')
    puts "Have no fear! Mario is here!"
    puts "\n"
    `afplay letsgo.wav`
    puts "💢💢  Let's use that power up!  💢 💢"
    `afplay powerup.mp3`
  end
end

board_one(quitting)

def lava(box, quitting)
  lava = ""
  puts "It's time to rescue 👸🏼 🍑 Peach!"
  puts "\n"
  puts "Uh oh, 🌋 🔥 lava everywhere! Do you 'jump over' or 'jump in'?"
  puts "🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥 🔥"
  print "Enter 'jump over' or 'jump in':\t"
  jump = gets.chomp.downcase
  # loops until correct input
  until jump == "jump in" || jump == "jump over"
    puts "\n"
    `afplay bump.wav`
    puts "🚫 Incorrect input! 🚫"
    print "Please choose 'jump over' or 'jump in':\t"
    jump = gets.chomp.downcase
  end

  if jump == "jump over"
    system('clear')
    puts "😅 Phew! That was close but you made it over!"
    puts "\n"
    `afplay bestcoin.wav`
    `afplay letsgo.wav`
  elsif jump == "jump in"
    system('clear')
    puts "😵 You died! 👎"
    puts "\n"
    puts "/***
    *     ██████╗  █████╗ ███╗   ███╗███████╗     ██████╗ ██╗   ██╗███████╗██████╗
    *    ██╔════╝ ██╔══██╗████╗ ████║██╔════╝    ██╔═══██╗██║   ██║██╔════╝██╔══██╗
    *    ██║  ███╗███████║██╔████╔██║█████╗      ██║   ██║██║   ██║█████╗  ██████╔╝
    *    ██║   ██║██╔══██║██║╚██╔╝██║██╔══╝      ██║   ██║╚██╗ ██╔╝██╔══╝  ██╔══██╗
    *    ╚██████╔╝██║  ██║██║ ╚═╝ ██║███████╗    ╚██████╔╝ ╚████╔╝ ███████╗██║  ██║
    *     ╚═════╝ ╚═╝  ╚═╝╚═╝     ╚═╝╚══════╝     ╚═════╝   ╚═══╝  ╚══════╝╚═╝  ╚═╝
    *
    */"
    `afplay dead.mp3`
    # takes user back to beginning of game to play again
    toads_house(box)
    board_one(quitting)
    lava(box, quitting)
  end
end
# make a loop outside of methods to restart game when dead
lava(box, quitting)
# users next choice
def turtle(koopa_troopa)
  puts "Uh oh, there's a 🐢  Koopa Troopa!"
  puts "\n"
  puts "Do you:"
  puts "A) jump on him and keep it moving?"
  puts "B) jump on him and take his shell with you?"
  puts "C) jump over him and keep it moving?"
  puts "\n"
  `afplay koopa.mp3`
  print "Choose 'A', 'B', or 'C':\t"

  koopa_troopa = gets.chomp.downcase
# loops until correct input
  until koopa_troopa == "a" || koopa_troopa == "b" || koopa_troopa == "c"
    puts "\n"
    `afplay bump.wav`
    puts "🚫 Incorrect input! 🚫"
    print "Please choose 'A', 'B', or 'C':\t"
    koopa_troopa = gets.chomp.downcase
  end

  case koopa_troopa
  when "a"
    # stores user's choice into array for later use
    @koopa_choice << "a"
    system('clear')
    puts "👏 Nice job, Mario! You clobbered that little sucker!"
    puts "\n"
    `afplay bestcoin.wav`
    `afplay letsgo.wav`

  when "b"
    # stores user's choice into array for later use
    @koopa_choice << "b"
    system('clear')
    puts "👏 Nice job, Mario! You clobbered that little sucker and kept his shell as a potential weapon!"
    puts "\n"
    `afplay bestcoin.wav`
    `afplay letsgo.wav`

  when "c"
    # stores user's choice into array for later use
    @koopa_choice << "c"
    system('clear')
    puts "😅 Phew! That was a close one, Mario!"
    puts "\n"
    `afplay bestcoin.wav`
    `afplay letsgo.wav`

  end
end

koopa_troopa = ""
turtle(koopa_troopa)

def fight_flight(decision, quitting)
  puts "BUM! BUM! BUM! 😱"
  puts "\n"
  puts "Here is Bowser, King of the Koopas and he looks ANGRY! 🐢 👹"
  puts "You are going to have to defeat him in order to save Princess Peach!👸🏼 🍑"
  puts "\n"
  puts "What are you going to do, Mario?"
  puts "\n"
  puts "Will you:"
  puts "A) 👊 Fight him?"
  puts "B) 👶 Be a coward and quit?"
  puts "\n"
  `afplay koopa.mp3`
  print "Choose A or B:\t"
  decision = gets.chomp.downcase
# loops until correct input
  until decision == "a" || decision == "b"
    puts "\n"
    `afplay bump.wav`
    puts "🚫 Incorrect input! 🚫"
    print "Please choose 'A', 'B':\t"
    decision = gets.chomp.downcase
  end

  if decision == "a"
    system('clear')
    puts "👊 Hell yeah! Beat that ass, Mario!"
    puts "\n"
    `afplay bestcoin.wav`
    `afplay letsgo.wav`
# option to quit
  elsif decision == "b"
    system('clear')
    print "So then would you like to quit? Yes/No:\t"
    quitting = gets.chomp.downcase

    fight_flight(decision, quitting)
  end
  return decision
end
decision = ""
fight_flight(decision, quitting)
# array of choices to be presented to user based on their choice stored in the choice arrays
def fight_choice
  options = {
    "box 1" => {
      "a" => [
        "A) Jump on him?",
        "B) Use your Hammer Suit and throw a 🔨 at him?",
        "C) Take a moment and think about it?"
      ],
      "b" => [
        "A) Jump on him?",
        "B) Use your Hammer Suit and throw a 🔨 at him?",
        "C) Take a moment and think about it?",
        "D) Throw the Koopa Troopa shell at him"
