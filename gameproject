# stores the user's choices made in game
@box_choice = []
@koopa_choice = []


# choosing the power up
def toads_house(box)
  puts "There are three boxes to choose from, choose carefully! Which box
  will you choose: 📦 'box 1', 📦 'box 2', or 📦 'box 3'?"
  box = gets.chomp.downcase

  until box == "box 1" || box == "box 2" || box == "box 3"
    puts "\n"
    `afplay bump.wav`
    puts "🚫 Incorrect input! 🚫"
    print "Please choose 'box 1', 'box 2', or 'box 3':\t"
    box = gets.chomp.downcase
  end


  case box
  when "box 1"
    system('clear')
    puts "Are you sure 📦 #{box} is the box you want to pick? Yes/No"
    sure = gets.chomp.downcase
    system('clear')
    # loops until correct input
    until sure == "yes" || sure == "no"
      puts "\n"
      `afplay bump.wav`
      puts "🚫 Incorrect input! 🚫"
      print "Please choose 'yes' or 'no':\t"
      sure = gets.chomp.downcase
    end

    if sure == "yes"
      # stores user's input into array for later use
      @box_choice << "box 1"
      puts "You got a 🔨🔨🔨🔨🔨🔨🔨 Hammer Suit!"
      puts "\n"
      `afplay powerup.mp3`
      `afplay letsgo.wav`
    else
      system('clear')
      toads_house(box)
    end

  when "box 2"
    system('clear')
    puts "Are you sure 📦 #{box} is the box you want to pick? Yes/No"
    sure = gets.chomp.downcase
    system('clear')
# loops until correct input
    until sure == "yes" || sure == "no"
      puts "\n"
      `afplay bump.wav`
      puts "🚫 Incorrect input! 🚫"
      print "Please choose 'yes' or 'no':\t"
      sure = gets.chomp.downcase
      system('clear')
    end

    if sure == "yes"
      # stores user's input into array for later use
      @box_choice << "box 2"
      puts "You got a 🔥 🌻 Fire Flower! 🔥 🌻"
      puts "\n"
      `afplay powerup.mp3`
      `afplay letsgo.wav`
    else
      system('clear')
      toads_house(box)
    end

  when "box 3"
    system('clear')
    puts "Are you sure 📦 #{box} is the box you want to pick? Yes/No"
    sure = gets.chomp.downcase
    system('clear')
# loops until correct input
    until sure == "yes" || sure == "no"
      puts "\n"
      `afplay bump.wav`
      puts "🚫 Incorrect input! 🚫"
      print "Please choose 'yes' or 'no':\t"
      sure = gets.chomp.downcase
    end

    if sure == "yes"
      # stores user's input into array for later use
      @box_choice << "box 3"
      puts "You got a 🍂🍂🍂🍂🍂🍂🍂🍂 Super Leaf!"
      puts "\n"
      `afplay powerup.mp3`
      `afplay letsgo.wav`
    else
      system('clear')
      toads_house(box)
    end
  end
  return box
end

